name: Deploy frontend
on:
  push:
    branches: [ main ]
  workflow_dispatch: {}
jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Deploy over SSH
        uses: appleboy/ssh-action@v0.1.10
        with:
          host: ${{ secrets.SSH_HOST }}
          username: ${{ secrets.SSH_USER }}
          key: ${{ secrets.SSH_KEY }}
          port: ${{ secrets.SSH_PORT }}
          script_stop: true
          script: |
            set -e
            FRONTEND_PATH=${FRONTEND_PATH:-/var/www/vendplug-frontend}
            cd "$FRONTEND_PATH"
            git fetch --all --prune
            git reset --hard origin/main
            git clean -fd
            # optional: ensure correct perms
            chown -R root:root "$FRONTEND_PATH"
            find "$FRONTEND_PATH" -type f -exec chmod 0644 {} \;
            find "$FRONTEND_PATH" -type d -exec chmod 0755 {} \;
            # reload nginx to pick up any new files
            nginx -t && systemctl reload nginx
